{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@game/*": ["src/game/*"],
      "@ui/*": ["src/ui/*"],
      "@scenes/*": ["src/scenes/*"],
      "@types/*": ["src/types/*"],
      "@data/*": ["src/data/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
