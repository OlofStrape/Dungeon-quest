{
  "name": "dungeon-of-numbers-edu-ak4",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:simple": "tsc src/main-simple.ts --outDir dist --target es2020 --module es2020 --moduleResolution node && vite build --config vite.config.simple.js",
    "preview": "vite preview",
    "build:gh-pages": "tsc && vite build --base=/dungeon-of-numbers-edu/",
    "deploy": "npm run build:gh-pages && gh-pages -d dist"
  },
  "dependencies": {
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "gh-pages": "^6.1.1",
    "typescript": "^5.4.0",
    "vite": "^5.0.0"
  }
}
